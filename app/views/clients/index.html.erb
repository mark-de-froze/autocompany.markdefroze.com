<h1><%=@title%></h1>
<div class="container mb-3">
  <div class="row">
    <div class="col">
      <div class="float-right">
        <%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @clients.each do |client| %>
      <%= render 'clients/client', client: client %>
    <% end %>
  </div>
</div>

<%= paginate @clients %>

<% if @clients.empty? %>
<h2 class="text-center text-muted"><%=t('no_records_found')%></h2>
<% end %>



