<h1><%= @title %></h1>
<%= simple_form_for(@client) do |f| %>
  <div class="my-3 mt-3">
    <%= f.button :submit, class: 'btn btn-primary'%>
    <%= yield :links %>
  </div>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :phone, input_html: {type: 'tel'} %>
  <%= f.input :content %>
  <%= f.association :user, prompt: :translate %>
  <%= f.label :users %>
  <div class="row">
    <%= f.collection_check_boxes :user_ids, @users, :id, :email, :item_wrapper_class => 'col-3' %>
  </div>
<% end %>
