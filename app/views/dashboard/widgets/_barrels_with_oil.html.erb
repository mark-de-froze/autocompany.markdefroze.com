<style>
  .progress-bar-vertical {
    width: 150px;
    float: left;
  }
  .progress-bar-vertical .progress {
    width: 100px;
    height: 250px;
    display: flex;
    align-items: flex-end;
  }
  .progress-bar-vertical .progress-bar {
    width: 100%;
    height: 0;
    -webkit-transition: height 0.6s ease;
    -o-transition: height 0.6s ease;
    transition: height 0.6s ease;
  }
</style>

<div id="OilsBarrels">
<h2>Barrels with oil</h2>
  <% @oils_barrels.each do |barrel|%>
      <div class="progress-bar-vertical">
          <span><%=number_to_currency(barrel.price)%> per <%=barrel.unit%></span>
          <div class="progress mr-3 mb-3">
            <div class="progress-bar" role="progressbar"  style="height: <%=(barrel.quantity*100)/barrel.total%>%; ">
            <span title="Barrel <%=barrel.total%> <%=barrel.unit%> total">
              <%=barrel.title%><br>
              <%=barrel.quantity%> <%=barrel.unit%>
            </span>
            </div>
          </div>
      </div>
  <% end %>
</div>

